<h1>Update Todo</h1>
<form class="" action="/todo/<%= @todo.id %>/update" name="_method" method="post">
  <input type="hidden" class="form-control" name="_method" value ="put" />
  <input type="hidden" class="form-control" name="id" value ="<%= @todo.id %>" />
  <div class="form-group">
  <label for="exampleInputEmail1">Title:</label>
  <input type="text" value="<%= @todo.title %>" name="title" class="form-control" id="exampleInputEmail1" placeholder="Title" required="true">
  </div>
  <div class="form-group">
  <label for="exampleInputEmail1">Description:</label>
    <textarea class="form-control" name="body" rows="3"><%= @todo.body %></textarea>
  </div>
  <button type="submit" class="btn btn-success">Update Todo</button>
</form>
